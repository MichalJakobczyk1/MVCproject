@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <main class="main">
            <section class="section__register__confirm">
                <p class="paragraph__detail"><a class="register__link" id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                </p>
            </section>
        </main>
    }
    else
    {
        <p class="paragraph__detail">
            Please check your email to confirm your account.
        </p>
    }
}

