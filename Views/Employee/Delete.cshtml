@model Employee

<main class="main">
    <section class="section__delete">
        <p class="paragraph__delete">Are you sure you want to delete</p>
        <p class="paragraph__delete">@Model.Name @Model.Surname ?</p>
        <div class="form__delete">
            <form action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="button__emp" />
            </form>
        </div>
    </section>
</main>
